---
import HeaderLinks from "./util/HeaderLinks.astro";
import Linkedin from "./icons/Linkedin.astro";
import Github from "./icons/Github.astro";
import Email from "./icons/Email.astro";
---

<header class="md:fixed z-50 md:left-2/4 top-3 md:w-screen md:-translate-x-2/4 lg:top-6">
  <div class="bg-black bg-opacity-20 backdrop-blur-lg">
    <div
      class="mx-auto -mt-6 flex justify-between max-md:flex-col p-3 md:items-center lg:px-6 md:py-6 xl:px-32 2xl:max-w-7xl 2xl:px-0"
    >
      <a
        href="#self-intro"
        class="text-2xl font-semibold text-mainGreen max-md:py-3 max-md:text-center sm:text-3xl"
      >
        <span class="text-white opacity-60">Dayan</span>VR
      </a>

      <nav
        class="flex w-full justify-evenly max-md:items-center max-md:justify-evenly"
      >
        <div
          class="flex text-xl font-medium max-md:flex-col max-md:items-center gap-2 md:gap-0.5 lg:text-2xl 2xl:gap-3"
        >
          <HeaderLinks href="#projects"> Projects </HeaderLinks>
          <HeaderLinks href="#skills"> Skills </HeaderLinks>
          <HeaderLinks href="#about"> About </HeaderLinks>
        </div>

        <div
          class="flex text-xl font-medium max-md:flex-col max-md:items-center gap-2 md:gap-0.5 lg:text-2xl 2xl:gap-3"
        >
          <HeaderLinks
            target="_blank"
            href="https://www.linkedin.com/in/dayan-villavicencio-rolffot-6a652527a/"
          >
            <Linkedin name="icon" />
            LinkedIn
          </HeaderLinks>
          <HeaderLinks target="_blank" href="https://github.com/DayanVR">
            <Github name="icon" />
            GitHub
          </HeaderLinks>
          <HeaderLinks
            target="_blank"
            href="mailto:dayanvillavicencio13@gmail.com"
            class="bg-gradient-to-br from-green-400 to-blue-600 p-1 hover:bg-gradient-to-bl focus:ring-green-200 dark:focus:ring-green-800"
          >
            <Email name="icon" />
            Contact me
          </HeaderLinks>
        </div>
      </nav>
    </div>
  </div>
</header>
