---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const { titles, dates, description } = t.timeline;
---

<ol
  class="relative mt-8 border-s border-gray-700 max-md:text-pretty md:text-balance"
>
  <li class="ms-6 mb-10">
    <span
      class="absolute -start-3 flex h-6 w-6 items-center justify-center rounded-full bg-blue-900 ring-8 ring-gray-900"
    >
      <svg
        class="h-2.5 w-2.5 text-blue-300"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path
          d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
        ></path>
      </svg>
    </span>
    <h2 class="text-mainGreen/85 mb-1 flex items-center text-xl font-semibold">
      {titles.one}
    </h2>
    <time
      class="mb-2 block text-base leading-none font-normal text-gray-300/70 md:text-lg xl:text-xl"
      >{dates.one}</time
    >
    <p class="mb-4 text-lg font-normal text-white/85 lg:text-xl">
      {description.one}
    </p>
  </li>
  <li class="ms-6 mb-10">
    <span
      class="absolute -start-3 flex h-6 w-6 items-center justify-center rounded-full bg-blue-900 ring-8 ring-gray-900"
    >
      <svg
        class="h-2.5 w-2.5 text-blue-300"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path
          d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
        ></path>
      </svg>
    </span>
    <h3 class="text-mainGreen/85 mb-1 text-xl font-semibold">
      {titles.two}
    </h3>
    <time
      class="mb-2 block text-base leading-none font-normal text-gray-300/70 md:text-lg xl:text-xl"
      >{dates.two}</time
    >
    <p class="text-lg font-normal text-white/85 lg:text-xl">
      {description.two}
    </p>
  </li>
  <li class="ms-6">
    <span
      class="absolute -start-3 flex h-6 w-6 items-center justify-center rounded-full bg-blue-900 ring-8 ring-gray-900"
    >
      <svg
        class="h-2.5 w-2.5 text-blue-300"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path
          d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
        ></path>
      </svg>
    </span>
    <h3 class="text-mainGreen/85 mb-1 text-xl font-semibold">
      {titles.three}
    </h3>
    <time
      class="mb-2 block text-base leading-none font-normal text-gray-300/70 md:text-lg xl:text-xl"
      >{dates.three}</time
    >
    <p class="text-lg font-normal text-white/85 lg:text-xl">
      {description.three}
    </p>
  </li>
</ol>
