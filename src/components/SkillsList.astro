---
import Container from "./util/Container.astro";
import { TAGS, extraTags } from "./constants/Constants";
import Headings from "./util/Headings.astro";

const frontendArray = Object.values(TAGS.FRONTEND);
const toolsArray = Object.values(TAGS.TOOLS);
const learningArray = Object.values(TAGS.LEARNING);
const extraTagsArray = Object.values(extraTags);
---

<Container id="skills">
  <Headings class="max-sm:text-4xl"><span>tecnologies</span>( )</Headings>

  <div class="-mx-10 flex justify-around max-xl:flex-col max-xl:space-y-10">
    <div
      class="h-fit space-y-10 rounded-xl bg-gradient-to-r from-blue-800/20 to-black to-70% py-6 max-sm:mx-10 sm:mx-32 md:mx-56 xl:mx-0 xl:w-[310px] 2xl:w-96 [&_h1]:text-center"
    >
      <Headings><span>frontend</span>[ ] </Headings>
      <div
        class="grid grid-flow-col grid-rows-2 gap-y-10 px-10 xl:mx-4 xl:grid-rows-2 xl:px-0"
      >
        {
          frontendArray.map((tag) => (
            <span class="space-y-2">
              <tag.icon class={`mx-auto size-12`} />
              <h2 class="text-center font-semibold opacity-65 sm:text-xl xl:text-2xl">
                {tag.name}
              </h2>
            </span>
          ))
        }
      </div>
    </div>

    <div
      class="h-fit space-y-10 rounded-xl bg-gradient-to-r from-blue-800/20 to-black to-70% py-6 max-sm:mx-10 sm:mx-32 md:mx-56 xl:mx-0 xl:w-[310px] 2xl:w-96 [&_h1]:text-center"
    >
      <Headings><span>tools</span>[ ] </Headings>
      <div
        class="grid grid-flow-col grid-rows-2 gap-y-8 px-10 xl:mx-6 xl:px-0 2xl:grid-cols-2"
      >
        {
          toolsArray.map((tag) => (
            <span class="space-y-2">
              <tag.icon class={`mx-auto size-12`} />
              <h2 class="text-center font-semibold opacity-65 sm:text-xl xl:text-2xl">
                {tag.name}
              </h2>
            </span>
          ))
        }
      </div>
    </div>
    <div
      class="h-fit space-y-10 rounded-xl bg-gradient-to-r from-blue-800/20 to-black to-70% py-6 max-sm:mx-10 sm:mx-32 md:mx-56 xl:mx-0 xl:w-[310px] 2xl:w-96 [&_h1]:text-center"
    >
      <Headings><span>learning</span>[ ] </Headings>
      <div
        class="grid-flow-rows grid grid-rows-2 gap-y-8 px-10 xl:mx-6 xl:px-0"
      >
        {
          learningArray.map((tag) => (
            <span class="space-y-2">
              <tag.icon class={`mx-auto size-12`} />
              <h2 class="text-center font-semibold opacity-65 sm:text-xl xl:text-2xl">
                {tag.name}
              </h2>
            </span>
          ))
        }
      </div>
    </div>
  </div>

  <Headings class="my-16">
    <span>skills</span>( )
  </Headings>
  <ul class="flex justify-evenly gap-5 max-md:flex-col">
    {
      extraTagsArray.map((tag) => (
        <li class="text-2xl opacity-75 xl:text-4xl">{tag}</li>
      ))
    }
  </ul>
</Container>
