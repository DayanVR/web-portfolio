---
import Container from "./util/Container.astro";

import { getLangFromUrl } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
---

<Container class="pt-0 sm:pt-4 md:pt-16" id="self-intro">
  <div class="flex items-center justify-between max-lg:flex-col">
    <div class="flex-col items-center space-y-2 max-lg:flex">
      <span
        class="text-base font-bold opacity-60 sm:text-2xl md:text-3xl 2xl:text-4xl"
        >{lang === "en" ? "Hello, I'm" : "Hola, soy"}</span
      >
      <h1
        class="font-semibold text-balance md:text-4xl lg:max-w-96 lg:text-7xl"
      >
        <span
          class="text-mainGreen text-lg sm:text-3xl lg:text-5xl 2xl:text-6xl"
          >{"< Dayan Villavicencio Rolffot />"}</span
        >
      </h1>

      <div class="flex flex-col max-lg:items-center">
        <h2
          class="text-lg font-semibold text-white/85 sm:text-2xl md:py-3 lg:text-4xl 2xl:text-5xl"
        >
          {lang === "en" ? "Frontend Developer" : "Desarrollador Frontend"}
        </h2>
        <div
          class="mt-3 items-center justify-between max-2xl:space-y-4 max-lg:text-center 2xl:flex"
        >
          <div class="flex items-center gap-1.5">
            <strong class="text-mainGreen text-3xl">+1 </strong>
            <span class="text-xl font-semibold opacity-75">
              {lang === "en" ? "Year of experience" : "AÃ±os de experiencia"}
            </span>
          </div>
          <a
            class="w-fit rounded-xl border-2 border-violet-600 px-3 py-1 text-xl font-semibold text-violet-600 transition-colors duration-300 hover:bg-violet-700 hover:text-white md:text-2xl"
            href="/assets/Dayan_Villavicencio_Rolffot_Resume.pdf"
            download
          >
            {lang === "en" ? "Download CV" : "Descargar CV"}
          </a>
        </div>
      </div>
    </div>
    <picture class="flex items-center max-xl:mt-4">
      <img
        src="/dayanvr.jpg"
        class="border-mainGreen/35 shadow-mainGreen/45 size-60 rounded-full border-2 shadow-[0_0px_50px_-15px_rgb(0,0,0,0.25)] max-lg:mt-6 sm:size-80 2xl:size-96"
        alt="Myself's picture"
      />
    </picture>
  </div>
</Container>
